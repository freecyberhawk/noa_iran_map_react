{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2020",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"]
}
